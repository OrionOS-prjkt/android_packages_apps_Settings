<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/entity_header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/cardview_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:gravity="start|center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="0dp">

            <ImageView
                android:gravity="start|center"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_chipset"
                android:tint="?android:colorAccent" />

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?android:colorAccent"
                    android:ellipsize="end"
                    android:id="@+id/akihabara_device_chipset"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="@string/device_info_default" />

                <TextView
                    android:textSize="16sp"
                    android:textColor="?android:textColorSecondary"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/akihabara_device_chipset_title" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/akihabara_device_divider"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginVertical="7dp"
            android:gravity="start|center"
            android:src="@drawable/divider_bg" />

        <LinearLayout
            android:gravity="start|center"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginStart="0dp">

            <ImageView
                android:gravity="start|center"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_ram"
                android:tint="?android:colorAccent" />

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?android:colorAccent"
                    android:id="@+id/akihabara_device_ram"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/device_info_default" />

                <TextView
                    android:textSize="16sp"
                    android:textColor="?android:textColorSecondary"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/akihabara_device_ram_title" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>            
