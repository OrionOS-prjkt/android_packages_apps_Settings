<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="orion_text_style_base">
        <item name="android:breakStrategy">simple</item>
    </style>

    <style name="orion_text_style_body1" parent="@style/orion_text_style_base">
        <item name="android:textSize">13.0sp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>
    
    <style name="orion_text_style_h6" parent="@style/orion_text_style_base">
        <item name="android:textSize">18.0sp</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>
    <style name="TextAppearance.orionInfoTitle">
        <item name="android:textColor">@color/orion_text_color_secondary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextAppearance.orionInfoSummary">
        <item name="android:textColor">@color/orion_text_color_primary</item>
        <item name="android:textSize">12.5sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>
</resources>
